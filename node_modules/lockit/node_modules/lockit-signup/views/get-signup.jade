extend /layout

block content
    #signup_box
        table
          div.panel.panel-default
            div.panel-heading Signup
            div.panel-body
              form(action="/signup", method="POST")
                div.form-group
                  tr
                    td
                      label(for="name") Username
                    td
                      input.form-control(type="text", id="name", name="name", placeholder="Pick a username")
                div.form-group
                  tr
                    td
                      label(for="email") Email
                    td
                      input.form-control(type="email", id="email", name="email", placeholder="Your email")
                  div.form-group
                  tr
                    td
                      label(for="password") Password
                    td
                      input.form-control(type="password", id="password", name="password", placeholder="Create a password")
                  tr
                    td
                      input(type="hidden", name="_csrf", value=_csrf)
                  if error
                  div.alert.alert-warning #{error}
                  tr
                    td
                        input(type="submit", class="btn btn-primary", value="Signup")
